{
    "doctype": "DocType",
    "name": "service_report",
    "module": "Ferum Customs",
    "engine": "InnoDB",
    "track_changes": 1,
    "title_field": "service_request",
    "fields": [
        {
            "fieldname": "service_request",
            "label": "Service Request",
            "fieldtype": "Link",
            "options": "ServiceRequest",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "customer",
            "label": "Customer",
            "fieldtype": "Link",
            "options": "Customer",
            "read_only": 1,
            "no_copy": 1,
            "description": "Automatically populated from the linked Service Request."
        },
        {
            "fieldname": "posting_date",
            "label": "Posting Date",
            "fieldtype": "Datetime",
            "default": "Today",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "total_payable",
            "label": "Total Payable",
            "fieldtype": "Currency",
            "read_only": 1,
            "no_copy": 1
        },
        {
            "fieldname": "work_items_section",
            "fieldtype": "Section Break",
            "label": "Work Items"
        },
        {
            "fieldname": "work_items",
            "label": "Work Items",
            "fieldtype": "Table",
            "options": "ServiceReportWorkItem",
            "reqd": 1
        },
        {
            "fieldname": "total_quantity",
            "label": "Total Quantity",
            "fieldtype": "Float",
            "read_only": 1,
            "no_copy": 1
        },
        {
            "fieldname": "documents_section",
            "fieldtype": "Section Break",
            "label": "Attached Documents"
        },
        {
            "fieldname": "attached_documents",
            "label": "Attached Documents",
            "fieldtype": "Table",
            "options": "ServiceReportDocumentItem"
        },
        {
            "fieldname": "status",
            "label": "Status",
            "fieldtype": "Select",
            "options": "draft\nsubmitted\ncancelled",
            "default": "draft",
            "read_only": 1,
            "hidden": 1,
            "print_hide": 1
        }
    ],
    "permissions": [
        {
            "role": "Проектный менеджер",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1,
            "submit": 1,
            "cancel": 1,
            "amend": 1
        },
        {
            "role": "Инженер",
            "read": 1,
            "write": 1,
            "create": 1
        }
    ]
}
